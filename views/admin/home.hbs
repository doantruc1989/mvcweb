        <div class="container-fluid pt-4 px-4">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Recent Salse</h6>
                    <a href=""></a>
                </div>
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-white">
                                <th scope="col">Date</th>
                                <th scope="col">ID</th>
                                <th scope="col">Customer</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orderTotal}}
                            <tr>
                                <td style="overflow: hidden; text-overflow: ellipsis; max-width: 160px">{{createdAt}}
                                </td>
                                <td style="overflow: hidden; text-overflow: ellipsis; max-width: 160px">{{_id}}</td>
                                <td>{{user.email}}</td>
                                <td>${{totalAmount}}</td>
                                <td>Paid</td>
                                <td><a class="btn btn-sm btn-primary" href="/order/{{_id}}">Detail</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-12 col-md-6 col-xl-6">
                    <div class="h-100 bg-secondary rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Product out of stock</h6>
                            <a href=""></a>
                        </div>
                        {{#each product}}
                        <div class="d-flex align-items-center border-bottom py-3">
                            <img class="rounded-circle flex-shrink-0" src="{{imagePath}}" alt=""
                                style="width: 40px; height: 40px;">

                            <div class="w-100 ms-3">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-0">{{title}}</h6>
                                    <small>{{_id}}</small>
                                </div>
                                <span>quantity: {{qty}}</span>
                            </div>

                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-xl-6">
                    <div class="h-100 bg-secondary rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <h6 class="mb-0">Calender</h6>
                            <a href=""></a>
                        </div>
                        <div id="calender"></div>
                    </div>
                </div>
            </div>
        </div>
